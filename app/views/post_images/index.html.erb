<div class=container>
  <div class="row">
    <div class ="m-2">
      <div class="table-bordered" >
        <% @post_images.each do |post_image| %>
          <%= link_to post_image_path(post_image) do %>
            <%= attachment_image_tag post_image, :image, :size =>'300x260' %>
            <div class="text-center">
              <p>場所：<%= post_image.name %></p>
              <p>説明：<%= post_image.caption %></p>
            </div>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
</div>


