<h1>Sign up</h1>
<div class=container>
  <div class="row">
    <%= form_with model: @user, url: user_path, local: true do |f| %>
        <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email %>
        </div>

        <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
        </div>

        <div class="field">
            <%= f.label :password_confirmation %><br>
            <%= f.password_field :password_confirmation %>
        </div>

        <div>
            <%= f.submit "sign up" %>
        </div>
    <% end %>
    </div>
</div>