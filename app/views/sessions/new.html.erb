<h1>Login</h1>
<div class=container>
  <div class="row">
    <%= form_with url: login_path, local: true do |f| %>
        <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email %>
        </div>
        <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
        </div>
        <div>
            <%= f.submit "Login" %>
        </div>
        <%= link_to "Sign up", new_user_path %>
    <% end %>
  </div>
</div>